@using CaptchaMvc.HtmlHelpers;
@model AssesmentUjjwal.Models.LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login Page</title>
    <link href="~/main.css" rel="stylesheet" />
    <link href="~/Content/site.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
</head>
<body>
    <div id="login-div">
        @using (Html.BeginForm("Validate", "Login", FormMethod.Post))
        {
            <div class="app-container app-theme-white fixed-sidebar fixed-header">
                <div class="app-main">
                    <div class="app-main__outer">
                        <div>
                            <div class="main-card mb-3 card col-md-9">
                                <div class="card-header">
                                    <div>Login to your Account</div>
                                </div>
                                <div class="card-body">
                                    <div class="main-card mb-3 card mt-2">
                                        <div class="card-body">
                                            <p>Login to your account to continue. You have to enter your username and password.</p>
                                            <hr />
                                            <div class="form-row">
                                                <div class="col-md-6">
                                                    <div class="position-relative form-group">
                                                        <label for="exampleText1" class="">User Name</label>
                                                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter your user name" } })
                                                        @Html.ValidationMessageFor(model => model.UserName)
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-row">
                                                <div class="col-md-6">
                                                    <div class="position-relative form-group">
                                                        <label for="exampleText2" class="">Password</label>
                                                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter your Password" } })
                                                        @Html.ValidationMessageFor(model => model.Password)
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="form-row">
                                                <div class="col-md-6">
                                                    <div class="position-relative form-group">
                                                        <label for="exampleText2" class="">Captcha</label>
                                                        @Html.Captcha(5)
                                                        @ViewBag.error
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="form-row mt-4">
                                                <div class="col-md-6">
                                                    <div class="position-relative form-group">
                                                        <input type="submit" name="name" value="Login" class="mt-2 btn btn-primary" />
                                                        <input type="reset" name="name" value="Clear" class="mt-2 btn btn-danger" />
                                                        <p>@ViewBag.error1</p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <a href="#">Ujjwal Gupta</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <script src="~/main.js"></script>
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script src="~/Content/notify.min.js"></script>
</body>
</html>
